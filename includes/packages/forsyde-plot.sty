% environment that plots a CT signal as a tikz picture
% #1 keys
% #2 width / height ratio
\newenvironment{ct-signal}[2][remember picture]{
  \pgfmathsetmacro\lllh{#2*4}
  %\setlength{\plw}{#2\plh}
  \begin{tikzpicture}[]
    \begin{axis}[
      height=4cm, width=\lllh cm,
      xlabel={$t$}, ylabel={$v$},
      grid=major,
      x label style={
        at={(axis description cs:1.1,0)},anchor=west},
      y label style={
        at={(axis description cs:-.1,.5)}},
      legend style={at={(1.05,1)}, anchor=north west},
      #1,
      ]
}{
    \end{axis} 
  \end{tikzpicture}
}

\newcommand*{\ctsignal}[3][]{
  \addplot+[#1] coordinates {#3};
  \addlegendentry{#2}
}